@using ImageOptimization
@{
    Layout = "../Shared/_Layout.cshtml";
}
<div class="links" id="links">
    <h1>WebP Images</h1>
    <p class="blurb">The images below will either be a standard JPEG or a WebP image. 
        This is determined using a server side alogrithm based on the browser agent. 
        For more information, please see this <a class="underline" href="http://www.deanhume.com/Home/BlogPost/webp---advanced-image-optimization-using-asp-net-mvc/89">link</a>.</p>
    <hr />
    <p><h2>Black/White/Grey Image</h2>(Original Size: 49KB / WebP Size: 13KB)</p>
    @Html.DrawImage("/Images/test.jpg", "This is a test image", "320", "416")
    <p><h2>High Colour Image</h2>(Original Size: 280KB / WebP Size: 51KB)</p>
    @Html.DrawImage("/Images/shard.jpg", "Aqua Shard", "710", "480")
</div>
